@model Learning_Content_Models.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h2>Create Category</h2>
<form method="post" asp-action="Add" asp-controller="Category">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StudyMaterials"></label>
        <input asp-for="StudyMaterials" asp-items="@(new SelectList(ViewBag.StudyMaterials,"Title"))"
               class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
