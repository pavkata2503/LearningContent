@using Learning_Content_Models.Models.Enums
@model Learning_Content_Models.Models.Message
@{
    ViewData["Title"] = "Create";
}

<h2>Create Message</h2>
<form method="post" asp-action="Add" asp-controller="Messages" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Receiver"></label>
        <input asp-for="Receiver" class="form-control" />
        <span asp-validation-for="Receiver" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>