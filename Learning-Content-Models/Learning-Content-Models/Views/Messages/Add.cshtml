@using Learning_Content_Models.Models.Enums
@model Learning_Content_Models.Models.Message
@{
	ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<style>

		.form-container {
			background-color: #fff;
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			padding: 30px;
			max-width: 500px;
			margin: auto;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="form-container mb-5">
			<h2 class="text-center">Напиши Съобщение</h2>
			<form method="post" asp-action="Add" asp-controller="Messages" enctype="multipart/form-data" class="needs-validation" novalidate>
				<div class="form-group">
					<label for="Text">Текст на съобщението:</label>
					<textarea asp-for="Text" class="form-control" rows="4"></textarea>
					<div class="invalid-feedback">Моля напиши съобщение на текста.</div>
				</div>
				<div class="form-group">
					<label for="Receiver">Имейл на получателя:</label>
					<input asp-for="Receiver" class="form-control" id="Receiver" required />
					<div class="invalid-feedback">Моля напиши получател на съобщението.</div>
				</div>
				<button style="background:orange;" type="submit" class="btn btn-primary btn-block">Създай</button>
			</form>
		</div>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>